-- category:
build-type:       Simple
cabal-version:    >= 1.14

library
  exposed-modules:     Data.Digest.DrunkenBishop
  ghc-options:         -Wall -Werror
  build-depends:       base >=4.7 && <5
                     , array
                     , bytestring
                     , pureMD5
  default-language:    Haskell2010

executable drunken-bishop
  hs-source-dirs:      src
  main-is:             Main.hs
  ghc-options:         -Wall -Werror
  build-depends:       base >=4.7 && <5
                     , drunken-bishop
                     , bytestring
                     , cryptohash-sha256
  default-language:    Haskell2010
